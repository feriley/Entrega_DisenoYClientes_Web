---
import estudios from '../data/education.json';

---

<section id="estudios" class="py-12 bg-[#f4f4f4] text-left">
  <!-- Icono y Estudios -->
  <div class="flex items-center mb-8 pl-10">
    <img src="./public/sombrerolicemc.webp" alt="Icono" class="w-16 h-16 mr-2">
    <h2 class="text-4xl font-bold">Studies</h2>
  </div>

  <!-- Mapeo de los estudios -->
  {estudios.map((estudio) => (
    <div class="flex justify-between items-center w-4/5 mx-auto mb-5 text-left">
      <div class="flex items-center gap-4">
        <img src={estudio.imagen} alt="Grado" class="w-16 h-16">
        <span class="text-2xl">{estudio.titulo}</span>
      </div>
      <div class="text-xl">{estudio.centro}</div>
      <div class="text-xl">{estudio.fecha}</div>
    </div>
  ))}
</section>
